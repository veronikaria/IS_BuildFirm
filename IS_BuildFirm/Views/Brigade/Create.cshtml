@model IS_BuildFirm.Models.Brigade
@{
    ViewData["Title"] = "Додати бригаду";
}

<h2 style="text-align:center">Додати бригаду</h2>
<h3>Ввід даних для бригади</h3>
<form asp-action="Create" asp-controller="Brigade" method="post" class="form-horizontal" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Name"></label><br />
        <div class="col-sm-10">
            <input asp-for="Name" placeholder="Назва бригади..." class="form-control" />
        </div>
        <span asp-validation-for="Name"></span>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Зберегти бригаду" class="btn btn-primary">
            <a asp-controller="Brigade" asp-action="Back" class="btn btn-primary">Назад</a>
        </div>
    </div>

</form>

