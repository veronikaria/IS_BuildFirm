@model IS_BuildFirm.Models.Builder
@{
    ViewData["Title"] = "Деталі робітника";
}

<h2 style="text-align:center;">Деталі робітника</h2>
<div class="container">
    <table class="table table-dark">
        <tr>
            <th scope="col">ФІО</th>
            <th scope="col">Телефон</th>
            <th scope="col">Спеціальність</th>
            <th scope="col">Бригада</th>
        </tr>
        <tr>
            <td>@Model.Lastname @Model.Firstname @Model.Middlename</td>
            <td>@Model.Phone</td>
            <td>@Model?.Speciality?.Name</td>
            <td>@Model?.Brigade?.Name</td>
        </tr>
    </table>

</div>

<br>
<a asp-controller="Builder" asp-action="Back" class="btn btn-primary">Відхилити</a>

